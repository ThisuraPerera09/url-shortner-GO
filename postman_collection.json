{
  "info": {
    "name": "URL Shortener API",
    "description": "Complete API collection for testing the URL Shortener service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Shorten URL",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://www.github.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/shorten",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "shorten"]
        }
      }
    },
    {
      "name": "Shorten URL with Custom Code",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://www.google.com\",\n  \"custom_code\": \"google\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/shorten",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "shorten"]
        }
      }
    },
    {
      "name": "Get URL Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/stats/:shortCode",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "stats", ":shortCode"],
          "variable": [
            {
              "key": "shortCode",
              "value": "google"
            }
          ]
        }
      }
    },
    {
      "name": "List All URLs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/urls?limit=10&offset=0",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "urls"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "Delete URL",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/urls/:shortCode",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "urls", ":shortCode"],
          "variable": [
            {
              "key": "shortCode",
              "value": "google"
            }
          ]
        }
      }
    },
    {
      "name": "Redirect to Original URL",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/:shortCode",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": [":shortCode"],
          "variable": [
            {
              "key": "shortCode",
              "value": "google"
            }
          ]
        }
      }
    }
  ]
}

